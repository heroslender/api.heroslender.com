{
    "[go]": {
        "editor.defaultFormatter": "ms-vscode.Go"
    },
    "go.autocompleteUnimportedPackages": true,
    "go.useCodeSnippetsOnFunctionSuggestWithoutType": true,
    "go.liveErrors": {
        "enabled": true,
        "delay": 500
    },
    "go.formatTool": "goimports",
    "go.lintOnSave": "file",
    "go.useLanguageServer": true,
}